@model TPRM.SAP.Web.Models.SaidaMovimentacaoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-10 col-sm-offset-1">
    <h4>Saída de Veículo</h4>
    <hr />
    <div class="form-horizontal tabela-visualizar" role="form">
        <div class="col-md-7">
            <div class="form-group">
                @Html.LabelFor(model => model.Valor, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    <div class="form-control-static">
                        @string.Format("{0:C}", Model.Valor)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-offset-4 col-md-8">
                    @Html.ActionLink("Pagar", "Pagar", new { id = Model.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
</div>
