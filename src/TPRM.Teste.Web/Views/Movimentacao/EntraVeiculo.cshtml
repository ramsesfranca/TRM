@model TPRM.SAP.Web.Models.EntradaMovimentacaoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-10 col-sm-offset-1">
    <h4>Entrada de Veículo</h4>
    <hr />
    @using (Html.BeginForm("EntraVeiculo", "Movimentacao", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.PlacaCarro, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.PlacaCarro, new { @class = "form-control campoPlaca" })
                    @Html.ValidationMessageFor(model => model.PlacaCarro, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Marca, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Marca, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Marca, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ModeloCarro, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.ModeloCarro, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ModeloCarro, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <div class="col-md-10 col-md-offset-2">
                    <button type="submit" class="btn btn-primary btn-flat">Salvar</button>
                    <a href="@Url.Action("Index")" class="btn btn-default">Cancelar</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/formulario")

    <script type="text/javascript">
        $(document).ready(function () {
            if ('@ViewBag.Message' != '') {
                $("form :input").each(function () {
                    $(this).val('');
                });
                if (!alert('O registro foi cadastrado com sucesso.\n\nTicket: ' + '@ViewBag.Message')) {
                    window.location.href = '@Url.Action("Index", "Movimentacao")';
                }
            }
        });
    </script>
}
