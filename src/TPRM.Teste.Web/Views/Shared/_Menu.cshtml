@model ICollection<TPRM.SAP.Web.Models.ModuloViewModel>

@foreach (var modulo in Model)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@modulo.Nome <span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
            @foreach (var funcionalidade in modulo.Funcionalidades)
            {
                <li>
                    @Html.ActionLink(funcionalidade.Nome, funcionalidade.Acao, funcionalidade.Controlador, new { area = modulo.Area }, null)
                </li>
            }
        </ul>
    </li>
}
