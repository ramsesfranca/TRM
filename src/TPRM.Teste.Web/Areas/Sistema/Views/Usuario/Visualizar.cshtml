@model TPRM.SAP.Web.Areas.Sistema.Models.VisualizarUsuarioViewModel
@using TPRM.SAP.Web.Helpers;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-10 col-sm-offset-1">
    <h4>Informações do Usuário</h4>
    <hr />
    <div class="form-horizontal tabela-visualizar" role="form">
        <div class="col-md-7">
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    <div class="form-control-static">
                        @Html.DisplayFor(model => model.Nome)
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CPF, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    <div class="form-control-static">
                        @Html.DisplayFor(model => model.CPF)
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    <div class="form-control-static">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Login, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    <div class="form-control-static">
                        @Html.DisplayFor(model => model.Login)
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PerfilId, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    <div class="form-control-static">
                        @Html.DisplayFor(model => model.Perfil.Nome)
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Status, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    <div class="form-control-static">
                        @Html.Raw(Model.Status.Descricao())
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-offset-4 col-md-8">
                    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
</div>
